{
  "version": "2.0.0",
  "tasks": [
      {
          "type": "cppbuild",
          "label": "build", // This label must match the preLaunchTask in launch.json
          "command": "C:\\cygwin64\\bin\\g++.exe",
          "args": [
              "-fdiagnostics-color=always",
              "-g",
              "${file}",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe"
          ],
          "options": {
              "cwd": "${fileDirname}"
          },
          "problemMatcher": ["$gcc"],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "detail": "Task generated for building C++ files."
      }
  ]
}